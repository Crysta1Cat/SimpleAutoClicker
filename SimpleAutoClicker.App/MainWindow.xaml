<Window x:Class="SimpleAutoClicker.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleAutoClicker.App"
        mc:Ignorable="d"
        Title="AutoClicker" Width="600" Height="400" >

    <Grid  Background="DarkGray">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="1" Name="StartBtn" Content="Start" VerticalAlignment="Bottom" Height="30" Margin="5" Click="StartBtn_Click"/>
    </Grid>
    
</Window>
